<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @Html.ActionLink("ERP Index", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="navbar-nav navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <!--Order-->
                <li class="nav-item">
                    @Html.ActionLink("Create Order", "CreateOrder", "Order", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Show Orders", "Index", "Order", new { area = "" }, new { @class = "nav-link" })
                </li>
                <!--Customer-->
                <li class="nav-item">
                    @Html.ActionLink("Create Customer", "CreateCustomer", "Customer", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Show Customers", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })
                </li>
                <!--Product-->
                <li class="nav-item">
                    @Html.ActionLink("Add Product", "CreateProduct", "Product", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Show Products", "Index", "Product", new { area = "" }, new { @class = "nav-link" })
                </li>
                <!--Stock-->
                <li class="nav-item">
                    @Html.ActionLink("Add Stock", "CreateStock", "Stock", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Show Stock", "Index", "Stock", new { area = "" }, new { @class = "nav-link" })
                </li>
                <!--Vendor-->
                <li class="nav-item">
                    @Html.ActionLink("Show Vendors", "Index", "Vendor", new { area = "" }, new { @class = "nav-link" })
                </li>
                <!--Stock-->
                <li class="nav-item">
                    @Html.ActionLink("Add Lot", "CreateLot", "Lot", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Show Lots", "Index", "Lot", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>